<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00"
            android:id="@+id/timer" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"
            android:id="@+id/start_button"
            android:onClick="onClick" android:layout_alignTop="@+id/pause_button"
            android:layout_toLeftOf="@+id/back_button"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pause"
            android:id="@+id/pause_button"
            android:onClick="onClick"
            android:layout_alignTop="@+id/stop_button" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop"
            android:id="@+id/stop_button"
            android:onClick="onClick"
            android:layout_marginTop="48dp" android:layout_below="@+id/timer"
            android:layout_toRightOf="@+id/back_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обратно"
            android:id="@+id/back_button"
            android:onClick="onClick" android:layout_below="@+id/pause_button" android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"/>
</RelativeLayout>

